<% @products.each do |product| %>
 <p><%= product.name %> | <%= number_to_currency product.price %>
   <% if current_user %>
     <%= form_for @order_item do |f| %>
       <%= f.hidden_field :product_id, value: product.id %>
       <%= f.number_field :quantity, min: 0 %>
       <%= f.submit "Add to cart" %>
     <% end %></p>
   <% end %>
<% end %>
